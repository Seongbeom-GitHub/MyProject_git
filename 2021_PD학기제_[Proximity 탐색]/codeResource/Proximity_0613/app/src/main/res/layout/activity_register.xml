<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/Theme.AppCompat">

            <TextView
                android:id="@+id/fragment1_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/title_join_membership"
                android:textColor="@color/colorBlack_2"
                android:textSize="18dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <EditText
                android:id="@+id/new_id"
                android:background="@drawable/white_card"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="아이디"/>
            <Button
                android:id="@+id/btnCheckID"
                android:background="@drawable/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_pw"
                android:background="@drawable/white_card"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="비밀번호"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_pw_again"
                android:background="@drawable/white_card"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="비밀번호 확인"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_name"
                android:background="@drawable/white_card"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="이름"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_phone"
                android:background="@drawable/white_card"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="휴대폰 번호"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_email"
                android:background="@drawable/white_card"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="이메일"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="bottom">

            <Button
                android:id="@+id/btn_joinMembership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/any_color_3"
                android:layout_margin="5dp"
                android:text="회원가입"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorGray_light"
                android:layout_margin="5dp"
                android:text="취소"/>
        </LinearLayout>









    </LinearLayout>

</LinearLayout>