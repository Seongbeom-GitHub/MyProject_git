<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folding_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <FrameLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient2"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_handup"/>


                    <TextView
                        android:id="@+id/tv_participate_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/typo_ssangmundongb"
                        android:text="택시 타러 같이 가자!"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>


                <View
                    android:layout_width="350dp"
                    android:layout_height="2px"
                    android:background="@color/white"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_participate_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="소개 하는 부분"
                    android:textSize="20dp" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="2px"
                    android:background="@color/white"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_love"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:fontFamily="@font/typo_ssangmundongb"
                            android:text="선호해요!"
                            android:textColor="@color/any_color_2"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_participate_preferences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:fontFamily="@font/typo_ssangmundongb"
                        android:text="한명만 / 비흡연자 "
                        android:textColor="@color/white"
                        android:textSize="15dp" />




                </LinearLayout>




                <View
                    android:layout_width="350dp"
                    android:layout_height="2px"
                    android:background="@color/white"/>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_now_person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="0"
                    android:fontFamily="@font/typo_ssangmundongb"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_max_person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="3"
                    android:fontFamily="@font/typo_ssangmundongb"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_personnal"/>

                <Button
                    android:id="@+id/btn_participate"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_login"
                    android:text="참여" />

                <Button
                    android:id="@+id/btn_participate_cancel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_join"
                    android:text="취소" />


            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutGradient"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.5"
                    android:textColor="@color/white"
                    android:fontFamily="@font/typo_ssangmundongb"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textColor="@color/white"
                    android:textSize="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_card"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_find_room_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Text"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_ssangmundongb"/>

                <TextView
                    android:id="@+id/tv_find_room_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contentcontentcontent"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

</com.ramotion.foldingcell.FoldingCell>
